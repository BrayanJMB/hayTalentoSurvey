@model ProyectoIdentity.Models.ModelsJourney.Encuesta

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Encuesta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IndexCreaPreguntas">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreEncuesta" class="control-label"></label>
                <input asp-for="NombreEncuesta" class="form-control" />
                <span asp-validation-for="NombreEncuesta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionEncuesta" class="control-label"></label>
                <input asp-for="DescripcionEncuesta" class="form-control" />
                <span asp-validation-for="DescripcionEncuesta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" class ="form-control" asp-items="ViewBag.CompanyId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Siguiente" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
