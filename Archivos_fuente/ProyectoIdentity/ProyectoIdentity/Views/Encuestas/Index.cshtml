@model IEnumerable<ProyectoIdentity.Models.ModelsJourney.Encuesta>

@{
    ViewData["Title"] = "Index";
}

@section Styles{
    <link href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/Tables.css">
}

<h1>Mis Encuestas</h1>

<p class="btn btn-info shadow titleButtonP">
    <i class="bi bi-plus-circle-dotted"></i>
    <a class="titleButton" asp-action="Create">Nueva Encuesta</a>
</p>
<table class="display" id="TableEncuestas">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.NombreEncuesta)</th>
            <th>Descripción de la encuesta</th>
            <th>Compañía</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>      
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.NombreEncuesta)</td>
            <td>@Html.DisplayFor(modelItem => item.DescripcionEncuesta)</td>
            <td>@Html.DisplayFor(modelItem => item.Company.Id)</td>
            <td>
            <div class="d-flex justify-content-between align-items-center">
                    <a class="titleButton" asp-action="Details" asp-route-id=@item.Id><i class="bi bi-eye-fill" style="color:blue; font-size:30px;"></i></a>
                        @if (item.NombreEncuesta.Contains("Madurez"))
                        {
                            <a class="titleButton" asp-controller="Dashboard1" asp-action="Index" asp-route-surveyId=@item.Id><i class="bi bi-bar-chart-line-fill" style="color:blue; font-size:30px;"></i></a>                        
                        }else{
                           <a class="titleButton" asp-controller="Dashboard" asp-action="Index" asp-route-surveyId=@item.Id><i class="bi bi-bar-chart-line-fill" style="color:blue; font-size:30px;"></i></a>
                        }
                        <a class="titleButton" asp-action="Create"><i class="bi bi-file-earmark-pdf" style="color:blue; font-size:25px;"></i></a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts{
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#TableEncuestas').DataTable(
                {
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                    }
                }
            );
        } );
    </script>
}
