@model ProyectoIdentity.Controllers.EditPreguntas
@{
    ViewData["Title"] = "Editar Encuesta";

}

@section Styles{

    <link rel="stylesheet" href="~/css/Preguntas.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    }

<div class="TitleTable">
</div>

<div class="app-main-content">
    <div class="app-wrapper">
        <div class="app-mid-column">
            <div class="w-100">
                <div class="sc-ZqGJI fqodEh">
                    <div class="sc-xWrgk hIODdx page-heading-wrapper">
                        <div class="heading-wrapper pr-3">
                            <div class="title-row">
                                <div class="d-block"><h4>@Model.Encuesta.NombreEncuesta</h4></div>
                                <div class="d-block"><p>@Model.Encuesta.DescripcionEncuesta</p></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="createSurveyBlock animated slideInUpTiny animation-duration-10">
                            <div class="stepperWrap w-100 mt-4">
                                <div class="steapsData">
                                    @foreach (var preguntas in Model.preguntas)
                                    {
                                        <div class="sc-xWrgk dbEiCY surveyListBlock">
                                            <div class="form-group ">
                                                <i>@preguntas.NumeroPregunta</i><label class="control-label">@preguntas.NombrePregunta</label>
                                                <button>Modificar</button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>




<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#TableEncuestas').DataTable(
                {
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                    }
                }
            );
        });
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    </script>

}

