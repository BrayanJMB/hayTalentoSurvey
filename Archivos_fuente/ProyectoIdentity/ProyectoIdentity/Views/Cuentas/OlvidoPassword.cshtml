@model OlvidoPasswordViewModel

@{
    ViewData["Title"] = "Olvido su contraeña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/Preguntas.css">
}
<div class="app-main-content w-75">
    <div class="app-wrapper">
        <div class="app-mid-column">
            <div>
                <div class="row">
                    <div class="col-md-12">

                        <div class="stepperWrap w-100 mt-4">
                            <div class="steapsData">
                                <div class="sc-xWrgk dbEiCY surveyListBlock">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h3 class="card-title text-center">Olvido su contraseña</h3>
                                        </div>
                                    </div>
                                    <div class="row">
                                        
                                        <form asp-controller="Cuentas" asp-action="OlvidoPassword" method="post">
                                            <div class="text-danger" asp-validation-summary="All"></div>
                                            <div class="row mt-4">
                                                <div class="col-sm-6 offset-3">

                                                    <div class="mb-3">
                                                        <label asp-for="Email" class="col-md-2"></label>
                                                        <input asp-for="Email" class="form-control" placeholder="Ingresa tu email" />
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>

                                                    <button type="submit" class="btn btn-success w-100 btn-lg">Recuperar Contraseña <i class="bi bi-arrow-right-circle-fill"></i></button>

                                                </div>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}