@model RegistroViewModel

@{
    ViewData["Title"] = "Registro de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Styles{
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/Preguntas.css">
}

        <div class="app-main-content">
            <div class="app-wrapper">
                <div class="app-mid-column">
                    <div>
                        <div class="row">
                            <div class="col-md-12">
                                
                                    <div class="stepperWrap w-100 mt-4">
                                        <div class="steapsData">
                                            <div class="sc-xWrgk dbEiCY surveyListBlock">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <h3 class="common-headline common-margin-bottom"><i>Registro de usuario</i></h3>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                   
                                                    <form asp-controller="Cuentas" asp-action="Registro" method="post">
                                                        <div class="text-danger" asp-validation-summary="All"></div>

                                                        <div class="row mt-4">
                                                            <div class="col-sm-6">

                                                                <div class="mb-3">
                                                                    <label asp-for="Nombre" class="col-md-12"></label>
                                                                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa tu nombre" />
                                                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label asp-for="Email" class="col-md-12"></label>
                                                                    <input asp-for="Email" class="form-control" placeholder="Ingresa tu email" />
                                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label asp-for="Telefono" class="col-md-2"></label>
                                                                    <input asp-for="Telefono" class="form-control" placeholder="Ingresa tu teléfono" />
                                                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                                                </div>
                                                            </div>

                                                            <div class="col-sm-6">
                                                                <div class="mb-3">
                                                                    <label asp-for="NombreCompania" class="col-md-6"></label>
                                                                    <input asp-for="NombreCompania" class="form-control" placeholder="Ingresa la Compañia" />
                                                                    <span asp-validation-for="NombreCompania" class="text-danger"></span>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label asp-for="Password" class="col-md-4"></label>
                                                                    <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña" />
                                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label asp-for="ConfirmPassword" class="col-md-12"></label>
                                                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Ingresa la confirmación de contraseña" />
                                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                                </div>

                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-sm-10 offset-2">
                                                                <button type="submit" class="btn btn-success w-75 btn-lg">Registrarse</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>






@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

