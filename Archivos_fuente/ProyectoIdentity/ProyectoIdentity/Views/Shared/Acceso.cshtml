@model AccesoViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

@{
    ViewData["Title"] = "Acceso de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="vh-100">
    <div class="Contenedor">
        <div class="container-fluid h-custom Login FormLogin">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="~/imagenes/LogoHayTalento.png"
              class="img-fluid" alt="Sample image" width="80%">
          </div>
          <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <form asp-controller="Cuentas" asp-action="Acceso" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
              <div class="divider d-flex align-items-center my-4">
                <p class="text-center fw-bold mx-3 mb-0">Inicio de Session</p>
              </div>

              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="email" asp-for="Email" class="form-control form-control-lg"
                  placeholder="Ingrese su correo Electronico" />
                  <span asp-validation-for="Email" class="text-danger"></span>
                <label class="form-label" asp-for="Email">Correo Electronico</label>
              </div>
              <!-- Password input -->
              <div class="form-outline mb-3">
                <input type="password" asp-for="Password" class="form-control form-control-lg"
                  placeholder="Ingrese su Contraseña" />
                   <span asp-validation-for="Password" class="text-danger"></span>
                <label class="form-label" asp-for="Password">Contraseña</label>
              </div>

              <div class="d-flex justify-content-between align-items-center">
                <!-- Checkbox -->
                <div class="form-check mb-0">
                    <label asp-for="RememberMe" class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input me-2" type="checkbox"/>
                    @Html.DisplayNameFor(m => m.RememberMe)
                    </label>             
                </div>
                <a asp-action="OlvidoPassword" class="text-body">Olvido Su Contraseña?</a>
              </div>

              <div class="text-center text-lg-start mt-4 pt-2">
                  <div class="text-danger" asp-validation-summary="All"></div>
                <button type="submit" class="btn btn-primary btn-lg"
                  style="padding-left: 2.5rem; padding-right: 2.5rem;">Iniciar Session</button>
                <p class="small fw-bold mt-2 pt-1 mb-0">No tienes Cuenta? <a asp-action="Registro"
                    class="link-danger">Registro</a></p>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
</section>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


